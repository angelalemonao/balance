<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login_y_registro"
    tools:context=".registro">

    <EditText
        android:id="@+id/enombre"
        android:layout_width="329dp"
        android:layout_height="43dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="Ingresar nombre"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#fff"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="174dp" />

    <EditText
        android:id="@+id/ePassword"
        android:layout_width="329dp"
        android:layout_height="43dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Ingresar contraseña"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="478dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="118dp"
        android:layout_height="23dp"
        android:text="Contraseña"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="446dp" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="329dp"
        android:layout_height="43dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="ej: micorreo@gmail.com"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/eCorreo"
        android:layout_width="213dp"
        android:layout_height="23dp"
        android:text="Correo electrónico"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="348dp" />

    <EditText
        android:id="@+id/eApellido"
        android:layout_width="329dp"
        android:layout_height="43dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="Ingresar apellido"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="276dp" />

    <TextView
        android:id="@+id/etiquetaapellido"
        android:layout_width="209dp"
        android:layout_height="21dp"
        android:text="Apellido"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/etiquetanombre"
        android:layout_width="213dp"
        android:layout_height="23dp"
        android:text="Nombre"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="142dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="193dp"
        android:layout_height="91dp"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="135dp"
        android:layout_marginBottom="629dp"
        android:background="#00FFFFFF"
        android:fontFamily="serif"
        android:text="REGISTRO"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/button25"
        android:layout_width="95dp"
        android:layout_height="58dp"
        android:background="@drawable/back"
        android:fontFamily="sans-serif-light"
        android:hint="<"
        android:textColorHint="#fff"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="565dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:layout_marginStart="147dp"
        android:layout_marginLeft="147dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/btnregistro"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="Registrarse"
        android:textColor="#427287"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>