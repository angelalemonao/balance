<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login_y_registro"
    tools:context=".login">


    <EditText
        android:id="@+id/email"
        android:layout_width="329dp"
        android:layout_height="43dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo electrónico:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="186dp" />

    <EditText
        android:id="@+id/contraseña"
        android:layout_width="329dp"
        android:layout_height="43dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="317dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/ingresar"
        android:layout_width="113dp"
        android:layout_height="45dp"
        android:background="@drawable/btnregistro"
        android:text="Ingresar"
        android:textColor="#427287"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="400dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recordarme"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="477dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/botocuadrado"
        android:shadowColor="#00FFFFFF"
        android:text="Regístrate para poder iniciar sesión"
        android:textColor="#A7FFEB"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#00FFFFFF"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="530dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:fontFamily="cursive"
        android:text="¡Bienvenido!"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="78dp" />

</androidx.constraintlayout.widget.ConstraintLayout>